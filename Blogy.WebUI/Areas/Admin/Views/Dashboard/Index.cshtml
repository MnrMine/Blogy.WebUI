
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<div class="content-wrapper">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <p class="card-description">
                    </p>
                    <div class="table-responsive">
                        <div class="row">
                            <div class="col-sm-12 mt-3">
                                <h3>İstatistikler</h3>
                            </div>
                            <div class="col-xl-12 col-lg-12 stretch-card grid-margin">
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                    <div class="card bg-warning">
                                        <div class="card-body px-3 py-4">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="color-card">
                                                    <p class="mb-0 color-card-head">Yazar Sayısı</p>
                                                    <h2 class="text-white">
                                                        @ViewBag.yazarsayisi
                                                    </h2>
                                                </div>
                                                <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                                            </div>
                                            <h6 class="text-white">Tüm Yazarlar</h6>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-3 stretch-card grid-margin grid-margin-sm-0 pb-sm-3">
                                    <div class="card bg-warning">
                                        <div class="card-body px-3 py-4">
                                            <div class="d-flex justify-content-between align-items-start">
                                                <div class="color-card">
                                                    <p class="mb-0 color-card-head">Categori Sayısı</p>
                                                    <h2 class="text-white">
                                                        @ViewBag.categorisayisi
                                                    </h2>
                                                </div>
                                                <i class="card-icon-indicator mdi mdi-basket bg-inverse-icon-warning"></i>
                                            </div>
                                            <h6 class="text-white">Tüm Categoriler</h6>
                                        </div>
                                    </div>
                                </div>



                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

